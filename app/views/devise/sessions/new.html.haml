.max-width-2.mx-auto.p2
  %h2.barrio.orange.form Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f|
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, class: "text-input"
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off", class: "text-input"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me, class: "inline"
    .actions
      = f.submit "Log in", class: "btn btn-primary"
  = render "devise/shared/links"
